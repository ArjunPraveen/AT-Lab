<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="56dp"
            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/regnoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="16dp"
            android:text="Registration Number:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="125dp"
            android:layout_height="46dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="96dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/regnoEditText"
            android:layout_width="136dp"
            android:layout_height="44dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="68dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/purple_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/q1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="192dp"
            android:text="Passion and Enthusiasm to teach"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="220dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioButton1_1"
                android:layout_width="114dp"
                android:layout_height="45dp"
                android:checked="false"
                android:text="1"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton1_2"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="2"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton1_3"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="3"
                android:textSize="15dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/q2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="280dp"
            android:text="Subject Knowledge"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="308dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioButton2_1"
                android:layout_width="114dp"
                android:layout_height="45dp"
                android:checked="false"
                android:text="1"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton2_2"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="2"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton2_3"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="3"
                android:textSize="15dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/q3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="368dp"
            android:text="Clarity and Emphasis on Concept"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="396dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioButton3_1"
                android:layout_width="114dp"
                android:layout_height="45dp"
                android:checked="false"
                android:text="1"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton3_2"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="2"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton3_3"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="3"
                android:textSize="15dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/q4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="456dp"
            android:text="Motivatation and inspiring the student"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="484dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioButton4_1"
                android:layout_width="114dp"
                android:layout_height="45dp"
                android:checked="false"
                android:text="1"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton4_2"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="2"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton4_3"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="3"
                android:textSize="15dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/q5TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="544dp"
            android:text="Creating Interest in Subject"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup5"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="572dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioButton5_1"
                android:layout_width="114dp"
                android:layout_height="45dp"
                android:checked="false"
                android:text="1"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton5_2"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="2"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButton5_3"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="3"
                android:textSize="15dp" />
        </RadioGroup>


        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="700dp"
            android:text="Submit"
            app:backgroundTint="@color/purple_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Would you want the teacher in future semesters?"
            app:layout_constraintBottom_toTopOf="@+id/submitButton"
            app:layout_constraintStart_toStartOf="@+id/q5TextView"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>